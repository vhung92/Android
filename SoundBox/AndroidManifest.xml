<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kth.vhung.soundbox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="kth.vhung.soundbox.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activitiy
            android:name="kth.vhung.soundbox.LoopActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:parentActivityName="kth.vhung.soundbox.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kth.vhung.soundbox.MainActivity" />
        </activitiy>

        <activity
            android:name="kth.vhung.soundbox.LoopActivity"
            android:label="@string/title_activity_loop"
            android:parentActivityName="kth.vhung.soundbox.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kth.vhung.soundbox.MainActivity" />
        </activity>
    </application>

</manifest>